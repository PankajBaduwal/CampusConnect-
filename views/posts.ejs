  <main class="col-lg-7 col-md-6 py-4 px-4">
  <h2 class="text-center mb-4 border-bottom pb-2 fw-bold text-dark">ğŸ“£ Latest Posts</h2>
  <div class="d-flex flex-column gap-4">
    <% for (let item of combined) { %>
    <div class="card shadow-sm border-0 post-card-glass">
      <% if (item.type === 'post') { %>
        <img src="<%= item.image %>" class="card-img-top rounded-top" alt="Post Image" style="object-fit: cover; height: 200px;">
        <div class="card-body">
          <h5 class="card-title fw-bold text-primary"><%= item.caption %></h5>
          <p class="text-dark mb-1">ğŸ‘¤ <%= item.authorName || 'Anonymous' %></p>
          <p class="text-dark small">ğŸ•’ <%= item.createdAt.toDateString() %></p>
          <div class="d-flex flex-wrap gap-2 mb-3">
            <form action="/posts/<%= item._id %>/<%= user._id %>/upvote" method="POST">
              <button class="btn btn-success btn-sm" type="submit">ğŸ‘ <%= item.upvotes %></button>
            </form>
            <form action="/posts/<%= item._id %>/<%= user._id %>/downvote" method="POST">
              <button class="btn btn-danger btn-sm" type="submit">ğŸ‘ <%= item.downvotes %></button>
            </form>
            <form action="/users/<%= user._id %>/favourites/<%= item._id %>" method="POST">
              <button class="btn btn-warning btn-sm" type="submit">â­ Favourite</button>
            </form>
            <% if (String(item.authorId) !== String(user._id)) { %>
              <form action="/users/<%= user._id %>/follow/<%= item.authorId %>" method="POST">
                <button class="btn btn-primary btn-sm" type="submit">â• Follow</button>
              </form>
            <% } %>
          </div>

          <button class="btn btn-outline-secondary btn-sm mt-2" onclick="toggleComments('<%= item._id %>')">ğŸ’¬ Show Comments</button>

          <div id="comments-container-<%= item._id %>" class="d-none mt-2">
            <% if (item.comments && item.comments.length > 0) { %>
              <ul class="list-group">
                <% item.comments.forEach(comment => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <strong><%= comment.author || 'Anonymous' %>:</strong>
                      <%= comment.text %>
                      <span class="text-muted small">ğŸ•’ <%= comment.createdAt ? comment.createdAt.toDateString() : '' %></span>
                    </div>
                    <div>
                      <form action="/posts/<%= item._id %>/comments/<%= comment._id %>/react/<%= user._id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-outline-success" type="submit" name="emoji" value="like">ğŸ‘ <%= comment.reactions?.[0]?.like || 0 %></button>
                        <button class="btn btn-sm btn-outline-danger" type="submit" name="emoji" value="love">â¤ï¸ <%= comment.reactions?.[0]?.love || 0 %></button>
                        <button class="btn btn-sm btn-outline-warning" type="submit" name="emoji" value="laugh">ğŸ˜‚ <%= comment.reactions?.[0]?.laugh || 0 %></button>
                        <button class="btn btn-sm btn-outline-info" type="submit" name="emoji" value="wow">ğŸ˜® <%= comment.reactions?.[0]?.wow || 0 %></button>
                      </form>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <div class="text-muted mt-2">No comments yet.</div>
            <% } %>
            <button class="btn btn-outline-primary btn-sm mt-2" onclick="toggleCommentForm('<%= item._id %>')">ğŸ“ Add Comment</button>
            <form action="/posts/<%= item._id %>/<%= user._id %>/comment" method="POST" class="d-none mt-2" id="comment-form-<%= item._id %>">
              <textarea class="form-control" rows="2" name="text" placeholder="Write your comment..."></textarea>
              <button class="btn btn-success btn-sm mt-2" type="submit">Post Comment</button>
            </form>
          </div>

        </div>
      <% } else if (item.type === 'poll') { %>
        <div class="card-body">
          <h5 class="text-primary fw-bold"><%= item.question %></h5>
          <form action="/polls/<%= user._id %>/vote/<%= item._id %>" method="POST">
            <% item.options.forEach((option, idx) => { %>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="vote" id="opt-<%= item._id %>-<%= idx %>" value="<%= option.text %>">
                <label class="form-check-label" for="opt-<%= item._id %>-<%= idx %>">
                  <%= option.text %> (<%= option.votes %>)
                </label>
              </div>
            <% }) %>
            <button class="btn btn-primary btn-sm mt-3" type="submit">Vote</button>
          </form>
          <p class="mt-3 text-muted small">
            ğŸ‘¤ <%= item.authorName || 'Anonymous' %> | ğŸ•’ <%= item.createdAt.toDateString() %>
          </p>
        </div>
      <% } %>
    </div>
    <% } %>
  </div>
</main>




