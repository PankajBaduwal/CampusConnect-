<script>

  function toggleComments(postId) {
  const commentsContainer = document.getElementById(`comments-container-${postId}`);
  commentsContainer.classList.toggle('d-none');
}
  // Store the current scroll position in localStorage before form submission
  document.addEventListener('DOMContentLoaded', function() {
    // Get all forms
    const forms = document.querySelectorAll('form');
    
    // Add event listener to each form
    forms.forEach(form => {
      form.addEventListener('submit', function() {
        localStorage.setItem('scrollPosition', window.scrollY);
      });
    });
    
    // Restore scroll position when page loads
    if (localStorage.getItem('scrollPosition')) {
      window.scrollTo(0, localStorage.getItem('scrollPosition'));
      // Optional: Clear the stored position after using it
      // localStorage.removeItem('scrollPosition');
    }
  });

  function toggleComments(postId) {
    const commentsContainer = document.getElementById(`comments-container-${postId}`);
    commentsContainer.classList.toggle('d-none');
  }

  function toggleCommentForm(postId) {
    const form = document.getElementById(`comment-form-${postId}`);
    form.classList.toggle('d-none');
  }

  function toggleEditForm(commentId) {
    const form = document.getElementById(`edit-form-${commentId}`);
    form.classList.toggle('d-none');
  }

  function toggleReplyForm(commentId) {
    const form = document.getElementById(`reply-form-${commentId}`);
    form.classList.toggle('d-none');
  }

  function toggleReplies(commentId) {
    const replies = document.getElementById(`replies-${commentId}`);
    replies.classList.toggle('d-none');
  }
  
  // Pause news ticker animation on hover
  document.querySelector('.news-ticker').addEventListener('mouseenter', function() {
    document.querySelector('.news-items').style.animationPlayState = 'paused';
  });
  
  document.querySelector('.news-ticker').addEventListener('mouseleave', function() {
    document.querySelector('.news-items').style.animationPlayState = 'running';
  });

  const chatbotForm = document.getElementById('chatbotForm');
  const chatbotInput = document.getElementById('chatbotInput');
  const chatbotBody = document.getElementById('chatbotBody');

  const responses = {
    "timetable": "ğŸ“… You can find your timetable on the student portal based on your department and year.",
    "library": "ğŸ“š The library is located in the main academic block. Itâ€™s open from 8 AM to 8 PM on weekdays.",
    "canteen": "ğŸ½ï¸ The canteen offers hygienic South Indian meals and snacks from 8 AM to 6 PM.",
    "event": "ğŸ‰ Our upcoming event is *Tech Carnival 2025*! Check the Events page for more details.",
    "hod": "ğŸ‘¨â€ğŸ« Your HoD is available from 10 AM to 12 PM on weekdays. Please visit your department.",
    "placement": "ğŸ¯ Our placement cell collaborates with top companies. Check out recent stats on the placement page!",
    "hostel": "ğŸ  Hostels for both boys and girls are available with Wi-Fi, mess, and 24/7 security.",
    "transport": "ğŸšŒ Buses are available across Coimbatore and nearby towns. Visit the transport section for routes.",
    "clubs": "ğŸ­ Clubs like Code Club, Music Club, Nature Club are open. Register via the student portal.",
    "contact": "ğŸ“ Call us at +91 422 2635600 or email info@kpriet.ac.in for any queries.",
    "default": "ğŸ¤– Hmm, Iâ€™m still learning. Try asking about 'library', 'hostel', 'clubs', or 'placements'."
  };

  chatbotForm.addEventListener('submit', function(e) {
    e.preventDefault();
    const userMessage = chatbotInput.value.trim();
    if (!userMessage) return;
    handleUserInput(userMessage);
  });

  function sendQuickQuestion(text) {
    chatbotInput.value = text;
    chatbotForm.dispatchEvent(new Event('submit'));
  }

  function handleUserInput(userMessage) {
    // Show user message
    chatbotBody.innerHTML += `<div class="chat-message user-message bg-light border rounded p-2 mb-2 ms-auto" style="max-width: 75%;">ğŸ™‹â€â™‚ï¸ ${userMessage}</div>`;

    // Match bot response
    const key = Object.keys(responses).find(k => userMessage.toLowerCase().includes(k));
    const botReply = responses[key] || responses["default"];

    setTimeout(() => {
      chatbotBody.innerHTML += `<div class="chat-message bot-message bg-success text-white p-2 rounded mb-2" style="max-width: 75%;">ğŸ¤– ${botReply}</div>`;
      chatbotBody.scrollTop = chatbotBody.scrollHeight;
    }, 500);

    chatbotInput.value = '';
  }

  
</script>