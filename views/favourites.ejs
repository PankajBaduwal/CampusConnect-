<% layout('layouts/boilerplate') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
  }

  .card {
    border-radius: 1.5rem;
    overflow: hidden;
    animation: slideInUp 0.8s ease-out;
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    border: none !important;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-img-top {
    height: 300px;
    object-fit: cover;
  }

  .card-title {
    color: #5a189a;
  }

  .btn-sm {
    padding: 6px 12px;
    border-radius: 10px;
  }

  .list-group-item {
    border: none;
    background-color: #f8f9fa;
    border-radius: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .card-footer {
    background-color: transparent;
    font-style: italic;
  }
</style>

<div class="container mt-5">
  <h2 class="text-center mb-4 fw-bold text-light">ğŸ’– My Favourite Posts</h2>

  <% if (favourites.length === 0) { %>
    <p class="text-center text-light">You have no favourite posts yet.</p>
  <% } %>

  <div class="row row-cols-1 g-4">
    <% favourites.forEach(post => { %>
      <div class="col">
        <div class="card">
          <img src="<%= post.image %>" class="card-img-top" alt="Post Image">

          <div class="card-body">
            <h5 class="card-title fw-semibold"><%= post.caption %></h5>
            <p class="card-text text-muted mb-1">
              <strong>Posted by:</strong> <%= post.author || 'Anonymous' %>
            </p>
            <p class="card-text text-muted mb-1">
              <strong>ğŸ‘ Upvotes:</strong> <%= post.upvotes %> |
              <strong>ğŸ‘ Downvotes:</strong> <%= post.downvotes %>
            </p>
            <p class="card-text">
              <small class="text-muted">ğŸ“… <%= post.createdAt.toDateString() %></small>
            </p>

            <div class="d-flex justify-content-end mt-3">
              <a href="/posts/<%= post._id %>/reply" class="btn btn-outline-primary btn-sm">
                ğŸ’¬ Reply
              </a>
            </div>
          </div>

          <% if (post.comments && post.comments.length > 0) { %>
            <ul class="list-group list-group-flush px-3 pb-3">
              <% post.comments.forEach(comment => { %>
                <li class="list-group-item">
                  <strong><%= comment.author || 'Anonymous' %>:</strong> <%= comment.text %><br>
                  <small class="text-muted"><%= comment.createdAt.toDateString() %></small>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <div class="card-footer text-center text-muted">
              ğŸ’¬ No comments yet.
            </div>
          <% } %>

        </div>
      </div>
    <% }) %>
  </div>
</div>
